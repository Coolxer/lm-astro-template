---
export interface Props {
  maxColumns?: 1 | 2 | 3 | 4
  class?: string
}

const { maxColumns = 4, class: className, ...attributes } = Astro.props
---

<div
  class:list={[
    "grid w-full place-content-center place-items-stretch gap-8",
    maxColumns === 1
      ? "grid-cols-1"
      : maxColumns === 2
        ? "grid-cols-1 md:grid-cols-2"
        : maxColumns === 3
          ? "grid-cols-1 md:grid-cols-2 lg:grid-cols-3"
          : "grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4",
    className,
  ]}
  {...attributes}>
  <slot />
</div>
