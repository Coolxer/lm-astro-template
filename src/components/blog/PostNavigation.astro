---
import { Icon } from "astro-icon/components"
import type { CollectionEntry } from "astro:content"

export interface Props {
  prevPost: CollectionEntry<"blog"> | null
  nextPost: CollectionEntry<"blog"> | null
  class?: string
}

const { prevPost, nextPost, class: className } = Astro.props
---

<div class:list={["flex flex-row justify-center gap-4", className]}>
  {
    prevPost?.slug ? (
      <a
        href={prevPost?.slug}
        class="flex items-center rounded-lg border p-3 px-10 no-underline transition-colors duration-300 ease-in-out hover:bg-black/5 hover:text-black focus-visible:bg-black/5 focus-visible:text-black dark:border-white/20 dark:hover:bg-white/5 dark:hover:text-white dark:focus-visible:bg-white/5 dark:focus-visible:text-white"
      >
        <Icon name="chevron-left" width={24} height={24} />
        <div class="flex items-center text-sm">Poprzedni post</div>
      </a>
    ) : (
      <div class="invisible" />
    )
  }

  {
    nextPost?.slug ? (
      <a
        href={nextPost?.slug}
        class="flex items-center rounded-lg border p-3 px-10 no-underline transition-colors duration-300 ease-in-out hover:bg-black/5 hover:text-black focus-visible:bg-black/5 focus-visible:text-black dark:border-white/20 dark:hover:bg-white/5 dark:hover:text-white dark:focus-visible:bg-white/5 dark:focus-visible:text-white"
      >
        <div class="flex items-center text-sm">NastÄ™pny post</div>
        <Icon name="chevron-right" width={24} height={24} />
      </a>
    ) : (
      <div class="invisible" />
    )
  }
</div>
